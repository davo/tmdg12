@font-face
  font-family Grumpy48Regular
  font-style normal
  font-weight normal
  src url(../fonts/grumpy_black48-webfont.ttf) format(truetype)

@font-face
  font-family AauxNextRegular
  font-style normal
  font-weight normal
  src url(../fonts/aauxnextregular-webfont.woff) format(woff)


html, body
  font-family Grumpy48Regular
  text-transform uppercase
  width 100%
  height 100%
  margin 0
  padding 0
  color #ffe002

#container
  position relative

#refer
  display block
  position absolute
  width auto
  height auto
  top 215px
  left 0
  padding 10px
  h1
    font-size 40px
    -webkit-font-smoothing antialiased
    margin 0
    padding 0
    line-height 10px
  p
    font-family AauxNextRegular
    font-size 14px
    line-height 14px
    width 250px
